<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!-- This mapping demonstrates the use of the EJB3 compliant table hilo generator -->

<hibernate-mapping package="com.iotek.entity">

	<class name="Product" table="product">

		<id name="id" column="id" type="int">
			<generator class="increment">
			</generator>
		</id>
		<many-to-one name="productDetail" class="com.iotek.entity.ProductDetail"
			column="product_detail" unique="true" cascade="all-delete-orphan"
			lazy="false"></many-to-one>
		<property name="productName" column="name" type="string" />
		<property name="productPrice" column="price" type="java.math.BigDecimal" />
		<property name="productType" column="type" type="string" />
	</class>

</hibernate-mapping>
